    <div  id="register">
        <div class="row animate__animated animate__backInDown  sporedni">
            <div id="naslov" >
                <h1 >WEBSHOP</h1>
                <h2 class="animate__animated animate__rubberBand animate__delay-1s">DOBRODOŠLI</h2>
            </div>

        </div>
        <div class="container-fluid" id="forma" >
            <div class="row">
                <div class="col text-center">
                    <a href="" class="btn btn-rounded mb-4" data-toggle="modal" data-target="#modalRegisterForm">Registruj
                        se kao trgovac</a>
                </div>
            </div>

            <div class="row">
                <div class="col text-center">
                    <a href="" class="btn btn-default btn-rounded mb-4" data-toggle="modal" data-target="#modalRegisterForm2">Registruj
                        se kao kupac</a>
                </div>
            </div>
            <div class="row">
                <div class="col text-center">
                    <h2 style="color: white">Imate profil?</h2>
                    <a class="btn btn-default btn-rounded mb-4" href="/home/login">PRIJAVI SE</a>

                </div>

            </div>


        </div>
        <div class="col-md-5">
            <div class="modal fade" id="modalRegisterForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header text-center">
                            <h4 class="modal-title w-100 font-weight-bold">Registracija kao trgovac</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <h3 id="greska1"></h3>

                        <form id="trgovacforma" action="/home/register" method="POST">

                        <div class="modal-body mx-3">

                            <div class="md-form mb-5">
                                <i class="fas fa-user prefix grey-text"></i>
                                <input type="text" id="trgovacusername"  name="username"  required class="form-control validate">
                                <label data-error="wrong" data-success="right" for="orangeForm-name">Korisnicko ime:</label>
                            </div>
                            <div class="md-form mb-5">
                                <i class="fas fa-envelope prefix grey-text"></i>
                                <input id="trgovacemail" type="email" name="email" required class="form-control validate">
                                <label data-error="wrong" data-success="right" for="orangeForm-email">Email</label>
                            </div>

                            <div class="md-form mb-4">
                                <i class="fas fa-lock prefix grey-text"></i>
                                <input id="trgovacpassword" type="password" required minlength="6" maxlength="24" name="password" class="form-control validate">
                                <label data-error="wrong" data-success="right" for="orangeForm-pass">Password</label>
                            </div>
                            <div class="md-form mb-4">
                                <select class="form-select form-select-lg mb-3" required  name="selectgrad" aria-label=".form-select-lg example">
                                    <%
                                    for (let i = 0; i < gradovi.length; i++) {%>
                                    <option> <%= gradovi[i].city%>  </option>
                                <%}%>
                                </select>
                                <label data-error="wrong" data-success="right" for="selectgrad">Grad</label>

                            </div>
                            <div class="md-form mb-5">
                                <i class="fas fa-user prefix grey-text"></i>
                                <input type="text"  required name="adresa" class="form-control validate">
                                <br>
                                <label id="trgovacadresa" data-error="wrong" data-success="right" for="adresa">Adresa</label>
                            </div>
                            <div class="md-form mb-5">
                                <i class="fas fa-user prefix grey-text"></i>
                                <input type="text" id="trgovactelefon"  required name="phone" class="form-control validate">
                                <br>
                                <label data-error="wrong" data-success="right" for="phone">Broj telefona</label>
                            </div>
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button type="submit" class="btn btn-deep-orange">Potvrdi</button>
                        </div>

                    </form>

                    </div>
                </div>
            </div>



        </div>
        <div class="col-md-2">
            <% for (let i = 0; i < greske.length; i++) {%>
            <div class="alert alert-warning" role="alert">
                <%=greske[i].msg%>
            </div>
            <%}%>
        </div>
        <div class="col-md-5">
            <div class="modal fade" id="modalRegisterForm2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header text-center">
                            <h4 class="modal-title w-100 font-weight-bold">Registracija kao kupac</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <form action="/home/register/kupac" method="POST">

                        <div class="modal-body mx-3">
                            <div class="md-form mb-5">
                                <i class="fas fa-user prefix grey-text"></i>
                                <input type="text" name="kupacime"  required class="form-control validate">
                                <label data-error="wrong" data-success="right" for="kupacime">Ime i prezime</label>
                            </div>
                            <div class="md-form mb-5">
                                <i class="fas fa-envelope prefix grey-text"></i>
                                <input type="email"  name="email" required  class="form-control validate">
                                <label data-error="wrong" data-success="right" for="email">Email</label>
                            </div>

                            <div class="md-form mb-4">
                                <i class="fas fa-lock prefix grey-text"></i>
                                <input type="password" name="password" minlength="6" maxlength="24" required class="form-control validate">
                                <label data-error="wrong" data-success="right" for="password">Password</label>
                            </div>
                            <div class="md-form mb-5">
                                <input type="text" title="Unesite rijeci razdvojene zarezom bez razmaka,dozvoljena su slova i brojevi." name="interesi" class="form-control validate">
                                <label data-error="wrong" data-success="right" for="interesi">(Opcionalno) Unesite interese razdvojene zarezom</label>
                                <p>Webshop će preporučiti relevantne artikle u odnosu na vaše interese.Interese možete promjeniti bilo kada
                                pri uređivanju profila.</p>
                            </div>
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button type="submit" class="btn btn-deep-orange">Potvrdi</button>
                        </div>
                        </form>

                    </div>
                </div>
            </div>


        </div>
    </div>

</div>

